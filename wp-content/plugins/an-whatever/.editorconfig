# This file is used to unify the style of the code for different editors and IDEs.
# editorconfig.org

# WordPress Coding Standards
# https://make.wordpress.org/core/handbook/coding-standards/

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = tab
indent_size = 4

[{.js,*jsx}]
singleQuote = true
trailingComma = 'es5'
bracketSpacing = true
parenSpacing = true
jsxBracketSameLine = false
semi = true
arrowParens = 'always'
useTabs = true
tabWidth = 4
printWidth = 160

[{.jshintrc,*.json,*.yml}]
indent_style = space
indent_size = 2

[{*.txt,wp-config-sample.php}]
end_of_line = crlf
